{
    "compilerOptions": {
        "module": "commonjs",
        "removeComments": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["es2017", "es7", "es6"],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": ["./src/**/*"],
    "exclude": ["dist", "build", "node_modules"]
}
